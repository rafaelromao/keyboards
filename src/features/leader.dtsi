/ {
        MACRO(md_exit,  &kp E &kp X &kp I &kp T &kp ENTER)
        MACRO(md_haha,  &kp H &kp A &kp H &kp A &kp ENTER)
        MACRO(md_hehe,  &kp H &kp E &kp H &kp E &kp ENTER)
        MACRO(md_kkkk,  &kp K &kp K &kp K &kp K &kp ENTER)
        MACRO(md_hugs,  &kp LBKT &kp RBKT &kp SQT &kp S)
        MACRO(md_otask, &kp MINUS &kp SPACE &kp LBKT &kp SPACE &kp RBKT &kp SPACE)
        MACRO(md_oref,  &kp LBKT &kp LBKT)

        leader: leader {
            compatible = "zmk,behavior-leader-key";
            #binding-cells = <0>;
            ld_exit    { sequence = <B> ; bindings = <&md_exit>; };
            ld_haha    { sequence = <P> ; bindings = <&md_haha>; };
            ld_hehe    { sequence = <F> ; bindings = <&md_hehe>; };
            ld_kkkk    { sequence = <N> ; bindings = <&md_kkkk>; };
            ld_hugs    { sequence = <C> ; bindings = <&md_hugs>; };
            ld_otask   { sequence = <T> ; bindings = <&md_otask>; };
            ld_oref    { sequence = <S> ; bindings = <&md_oref>; };
            ld_comment { sequence = <D> ; bindings = <&mc_comment>; };
        };
};